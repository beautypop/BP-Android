<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/feed_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/noItemView"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="12dp"
            android:layout_below="@+id/viewBar"
            android:paddingTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/home_following_tips"
                android:textSize="15dp"
                android:textColor="@color/light_gray"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:textStyle="bold" />

        </LinearLayout>

        <Button
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:id="@+id/startFollowingButton"
            android:background="@drawable/button_pink_border"
            android:scaleType="fitCenter"
            android:text="@string/start_following"
            android:textColor="@color/light_pink"
            android:textSize="15dp"
            android:layout_alignParentRight="false"
            android:textAllCaps="false"
            android:singleLine="true"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>