<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.beautypop.activity.ReviewActivity">

    <include layout="@layout/review_actionbar"
             android:id="@+id/toolbar" />

    <com.astuetz.PagerSlidingTabStrip
        android:id="@+id/sellerTabs"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:textSize="15dp"
        android:textColorPrimary="@color/white"
        app:pstsDividerColor="@color/view_bg"
        app:pstsIndicatorColor="@color/light_gray"
        app:pstsUnderlineColor="@color/light_gray_2"
        app:pstsTabPaddingLeftRight="10dp"
        app:pstsIndicatorHeight="3dp"
        app:pstsUnderlineHeight="0.8dp"
        app:pstsShouldExpand="true"
        app:pstsTextStyle="normal"
        app:pstsTextSelectedStyle="bold"
        app:pstsTextAllCaps="false"
        android:fillViewport="false"
        android:background="@color/black" />

    <android.support.v4.view.ViewPager xmlns:android="http://schemas.android.com/apk/res/android"
                                       android:id="@+id/sellerPager"
                                       android:layout_below="@+id/sellerTabs"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">
    </android.support.v4.view.ViewPager>

</RelativeLayout>
