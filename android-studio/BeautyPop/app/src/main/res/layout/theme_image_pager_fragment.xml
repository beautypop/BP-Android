<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/imageFrame">

        <ImageView
            android:layout_marginBottom="20dp"
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="130dp"
             />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_gravity="bottom|right"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_liked"
            />


    </FrameLayout>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/imageFrame"
        android:id="@+id/titleText"
        android:textSize="20dp"
        android:text="Carnival"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/titleText"
        android:id="@+id/infoText"
        android:textSize="15dp"
        android:text="This is summer,it's time to get playful. Our collection features a selection of clothing that is as fun as carnival ! Happy Shopping !!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.yalantis.phoenix.PullToRefreshView
        android:layout_marginTop="10dp"
        android:layout_below="@+id/infoText"
        android:id="@+id/pull_to_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/feedView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical" />

    </com.yalantis.phoenix.PullToRefreshView>

</RelativeLayout>