<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/feed_bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/feed_bg"
        android:id="@+id/subCategoriesLayout">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:id="@+id/catsRow1Layout">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cat1"
                android:layout_marginRight="7dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:minHeight="85dp"></ImageView>

                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dark_gray"
                        android:gravity="center_horizontal|bottom"
                        android:lineSpacingMultiplier="0.9"
                        android:alpha="0.6"
                        android:layout_gravity="bottom"
                        android:text=""
                        android:padding="2dp"
                        android:textStyle="bold" />

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cat2"
                android:layout_marginRight="7dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:minHeight="85dp"></ImageView>

                    <TextView
                        android:id="@+id/name2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dark_gray"
                        android:gravity="center_horizontal|bottom"
                        android:lineSpacingMultiplier="0.9"
                        android:alpha="0.6"
                        android:layout_gravity="bottom"
                        android:text=""
                        android:padding="2dp"
                        android:textStyle="bold" />

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cat3"
                android:layout_marginRight="7dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:minHeight="85dp"></ImageView>

                    <TextView
                        android:id="@+id/name3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dark_gray"
                        android:gravity="center_horizontal|bottom"
                        android:lineSpacingMultiplier="0.9"
                        android:alpha="0.6"
                        android:layout_gravity="bottom"
                        android:text=""
                        android:padding="2dp"
                        android:textStyle="bold" />

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cat4"
                android:layout_marginRight="7dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:minHeight="85dp"></ImageView>

                    <TextView
                        android:id="@+id/name4"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dark_gray"
                        android:gravity="center_horizontal|bottom"
                        android:lineSpacingMultiplier="0.9"
                        android:alpha="0.6"
                        android:layout_gravity="bottom"
                        android:text=""
                        android:padding="2dp"
                        android:textStyle="bold" />

                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:id="@+id/catsRow2Layout">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cat5"
                android:layout_marginRight="7dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:minHeight="85dp"></ImageView>

                    <TextView
                        android:id="@+id/name5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dark_gray"
                        android:gravity="center_horizontal|bottom"
                        android:lineSpacingMultiplier="0.9"
                        android:alpha="0.6"
                        android:layout_gravity="bottom"
                        android:text=""
                        android:padding="2dp"
                        android:textStyle="bold" />

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cat6"
                android:layout_marginRight="7dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:minHeight="85dp"></ImageView>

                    <TextView
                        android:id="@+id/name6"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dark_gray"
                        android:gravity="center_horizontal|bottom"
                        android:lineSpacingMultiplier="0.9"
                        android:alpha="0.6"
                        android:layout_gravity="bottom"
                        android:text=""
                        android:padding="2dp"
                        android:textStyle="bold" />

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cat7"
                android:layout_marginRight="7dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:minHeight="85dp"></ImageView>

                    <TextView
                        android:id="@+id/name7"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dark_gray"
                        android:gravity="center_horizontal|bottom"
                        android:lineSpacingMultiplier="0.9"
                        android:alpha="0.6"
                        android:layout_gravity="bottom"
                        android:text=""
                        android:padding="2dp"
                        android:textStyle="bold" />

                </FrameLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/cat8"
                android:layout_marginRight="7dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:adjustViewBounds="true"
                        android:minHeight="85dp"></ImageView>

                    <TextView
                        android:id="@+id/name8"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textSize="13dp"
                        android:textColor="@color/white"
                        android:layout_centerHorizontal="true"
                        android:background="@color/dark_gray"
                        android:gravity="center_horizontal|bottom"
                        android:lineSpacingMultiplier="0.9"
                        android:alpha="0.6"
                        android:layout_gravity="bottom"
                        android:text=""
                        android:padding="2dp"
                        android:textStyle="bold" />

                </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:id="@+id/viewBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/bar1"
        android:layout_below="@+id/subCategoriesLayout"
        android:visibility="gone"></View>

    <LinearLayout
        android:id="@+id/filterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/viewBar"
        android:background="@color/feed_bg"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/viewBar"
            android:background="@color/feed_bg"
            android:orientation="horizontal"
            android:weightSum="10"
            android:layout_marginBottom="10dp"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.33"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/filter_all"
                    android:id="@+id/allFilterButton"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_filter"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.33"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/filter_new"
                    android:id="@+id/newFilterButton"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_filter_unselect"
                    android:textColor="@color/gray"
                    android:textAllCaps="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3.33"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/filter_used"
                    android:id="@+id/usedFilterButton"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_filter_unselect"
                    android:textColor="@color/gray"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/viewBar"
            android:background="@color/feed_bg"
            android:orientation="horizontal"
            android:weightSum="10">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/filter_popular"
                    android:id="@+id/popularFilterButton"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_filter"
                    android:textColor="@color/white"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/filter_newest"
                    android:id="@+id/newestFilterButton"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_filter_unselect"
                    android:textColor="@color/dark_gray"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/filter_price_low_high"
                    android:id="@+id/priceLowHighFilterButton"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_filter_unselect"
                    android:textColor="@color/dark_gray"
                    android:textAllCaps="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2.5"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/filter_price_high_low"
                    android:id="@+id/priceHighLowFilterButton"
                    android:textSize="15dp"
                    android:layout_gravity="center"
                    android:background="@drawable/button_filter_unselect"
                    android:textColor="@color/dark_gray"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tipsLayout"
        android:layout_below="@+id/filterLayout"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/tips_box_pink"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingBottom="12dp"
            android:layout_below="@+id/viewBar"
            android:paddingTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/category_tips"
                android:textSize="15dp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/dismissTipsButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="right|top"
            android:padding="6dp"
            android:layout_marginRight="10dp" />

    </FrameLayout>

</RelativeLayout>